<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Social Wave</title>

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
    <%= javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js" %>
  <![endif]-->

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body data-spy="scroll" data-target=".navbar" data-offset="50">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="navbar-header">
      <%= link_to root_path do %>
        <span class="navbar-brand">SocialWave</span>
      <% end %>
    </div>
    <ul class="nav navbar-nav navbar-right top-nav" style="height: 1px;">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="glyphicon glyphicon-user"></i> <%= cookies[:comprador_login].present? ? JSON.parse(cookies[:comprador_login])["nome"] : "Entrar" %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li>
              <% unless cookies[:comprador_login].present? %>
                <%= link_to "Logar", login_index_path, class:'text-center' %>
              <% else %>
                <%= link_to comprador_path(JSON.parse(cookies[:comprador_login])["id"]) do %>
                  <i class="glyphicon glyphicon-file"></i> Minha conta
                <% end %>
                <%= link_to deslogar_path do %>
                  <i class="glyphicon glyphicon-off"></i> Sair
                <% end %>
              <% end %>
                </li>
            </ul>
        </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% unless cookies[:comprador_login].present? %>
        <li>
          <%= link_to new_comprador_path do %>
            <i class= "glyphicon glyphicon-plus"></i> Cadastrar-se
          <% end %>
        </li>
      <% end %>
    </ul>
  </nav>
    <%= yield %>
</body>
</html>
