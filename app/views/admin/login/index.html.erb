<div class="login center-block">
  <div class="row">
    <div class="text-center">
      <h1>Area Administrativa</h1>
    </div>
  </div>
  <div class="row row-margin">
    <%= form_for("login", html: { class: "form-horizontal form-login", role: "form" }) do |f| %>
      <% if flash[:erro].present? %>
        <div class="form-group">
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
            <ul>
              <li><%= flash[:erro] %></li>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-sm-12">
          <%= f.email_field :email, class: "form-control", placeholder: "Insira seu e-mail" %>
        </div>
      </div>
      <div class="form-group center-block">
        <div class="col-sm-12">
          <%= f.password_field :senha, class: "form-control", placeholder: "Insira sua senha" %>
        </div>
      </div>
      <div class="form-group submit-box">
        <%= f.submit 'Logar', class: "btn center-block submit-login" %>
      </div>
    <% end %>
  </div>
</div>
