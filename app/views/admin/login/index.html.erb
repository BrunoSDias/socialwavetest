<div class="login">
  <div class="col-md-8 col-sm-8">
    <%= form_for("login", html: { class: "form-horizontal form-login", role: "form" }) do |f| %>
      <% if flash[:erro].present? %>
        <div class="form-group">
          <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
            <ul>
              <li><%= flash[:erro] %></li>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :email, 'E-mail:', class: "col-sm-3 control-label" %>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :senha, 'Senha:', class: "col-sm-3 control-label" %>
        <div class="col-sm-8">
          <%= f.password_field :senha, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-1 text-right">
          <%= f.submit 'Logar', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
