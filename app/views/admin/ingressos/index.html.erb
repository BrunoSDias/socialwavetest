<div class="page-header">
  <% if notice %>
    <div class="alert alert-success alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <strong><%= notice %></strong>
    </div>
  <% end %>
  <%= link_to new_admin_ingresso_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t 'buttons.new' %> Ingresso
  <% end %>
  <h1>Lista de ingressos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Pre√ßo</th>
        <th>Nome</th>
        <th>Taxa</th>
        <th>Data</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @ingressos) do |ingresso| %>
        <td><%= ingresso.preco %></td>
        <td><%= ingresso.nome %></td>
        <td><%= ingresso.taxa %></td>
        <td><%= l ingresso.data, format: :short %></td>
        <td><%= link_to "#{t'buttons.show'}", admin_ingresso_path(ingresso) %></td>
        <td><%= link_to "#{t'buttons.edit'}", edit_admin_ingresso_path(ingresso) %></td>
        <td><%= link_to "#{t'buttons.destroy'}", admin_ingresso_path(ingresso), method: :delete, data: { confirm: "#{t'confirm'}" } %></td>
      <% end %>
    </tbody>
  </table>
</div>
