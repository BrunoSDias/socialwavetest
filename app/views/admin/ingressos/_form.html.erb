<% if @ingresso.new_record? %>
  <% action_method = "create" %>
<% else %>
  <% action_method = "update" %>
<% end %>


<%= form_for(@ingresso, url: {controller: 'admin/ingressos', action: action_method}, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @ingresso.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@ingresso.errors.count, "error") %> prohibited this ingresso from being saved:</h4>

      <ul>
      <% @ingresso.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :preco, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :preco, :step => "0.01", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nome, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nome, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :taxa, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :taxa, :step => "0.01", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :data, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :data, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
