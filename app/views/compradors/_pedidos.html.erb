
<% if @comprador.pedidos.count > 0  %>
  <% @comprador.pedidos.each do |pedido| %>
  <dd></dd>
  <br>
    <dt class="little-margin">Pedido n° <%= pedido.id %></dt>
      <dd class="little-margin"><%= pedido.pago ? "Pagamento Realizado" : "Pagamento não Realizado" %></dd>
      <dd><%= link_to "Acessar Pedido", edit_pedido_path(pedido.id, ingresso: pedido.ingresso, imagem: "festa#{rand(1..14)}"), class: 'btn btn-success little-margin' %></dd>
      <dd><%= link_to "Cancelar Pedido", pedido, method: :delete, class: 'btn btn-danger little-margin', data: { confirm: "#{t'confirm'}" } %></dd>
  <% end %>
<% end %>
