<div class="page-header">
  <%= link_to new_pedido_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t 'buttons.new' %> Pedido
  <% end %>
  <h1>Lista de pedidos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Comprador</th>
        <th>Ingresso</th>
        <th>Pago</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @pedidos) do |pedido| %>
        <td><%= pedido.comprador %></td>
        <td><%= pedido.ingresso %></td>
        <td><%= pedido.pago %></td>
        <td><%= link_to "#{t'buttons.show'}", pedido %></td>
        <td><%= link_to "#{t'buttons.edit'}", edit_pedido_path(pedido) %></td>
        <td><%= link_to "#{t'buttons.destroy'}", pedido, method: :delete, data: { confirm: "#{t'confirm'}" } %></td>
      <% end %>
    </tbody>
  </table>
</div>
