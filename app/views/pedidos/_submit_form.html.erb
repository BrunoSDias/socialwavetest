
<% if @pedido.new_record? %>
  <%= f.submit "Comprar", class: "btn btn-success center-block btn-comprar" %>
  <small>Taxa de <%= number_to_currency(@ingresso.taxa)%> pelo serviço</small>
  <br><br>
  <%= f.submit "Solicitar", class: "btn btn-primary center-block btn-comprar" %>
<% else %>
  <% if @pedido.pago%>
    <%= link_to "Cancelar", pedido_path, method: :delete, class: 'btn btn-danger center-block btn-comprar', data: { confirm: "#{t'confirm'}" } %>
  <% else %>
    <%= f.submit "Comprar", class: "btn btn-success center-block btn-comprar" %>
    <small>Taxa de <%= number_to_currency(@ingresso.taxa)%> pelo serviço</small>
    <br><br>
    <%= link_to "Cancelar", pedido_path, method: :delete, class: 'btn btn-danger center-block btn-comprar', data: { confirm: "#{t'confirm'}" } %>
  <% end  %>
<% end  %>
